{
  "name": "simple_server_gateway",
  "description": "Expose microservices under a joint port",
  "license": "GPL-3.0",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/axelkr/simple-server-gateway.git"
  },
  "scripts": {
    "build": "webpack --env.production",
    "buildContainer": "docker build --rm -f \"docker/Dockerfile\" -t gateway:latest docker",
    "runContainer": "docker run --rm -it --network host gateway:latest",
    "buildDebug": "webpack",
    "watch": "webpack --watch",
    "start": "node ./dist/bundle.js",
    "test": "jest",
    "lint": "eslint './src/**/*.ts'"
  },
  "dependencies": {
    "express": "^4.17.1",
    "postman-request": "^2.88.1-postman.27"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.16",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "babel-loader": "^8.2.2",
    "eslint": "^7.15.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0"
  }
}
