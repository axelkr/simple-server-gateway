{
  "name": "simple_server_gateway",
  "description": "Expose microservices under a joint port",
  "license": "GPL-3.0",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/axelkr/simple-server-gateway.git"
  },
  "scripts": {
    "build": "webpack --env.production",
    "buildContainer": "docker build --rm -f \"docker/Dockerfile\" -t gateway:latest docker",
    "runContainer": "docker run --rm -it --network host gateway:latest",
    "buildDebug": "webpack",
    "watch": "webpack --watch",
    "start": "node ./dist/bundle.js",
    "test": "jest",
    "lint": "eslint './src/**/*.ts'"
  },
  "dependencies": {
    "express": "^4.17.1",
    "postman-request": "^2.88.1-postman.29"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.14",
    "@babel/preset-env": "^7.13.12",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "babel-loader": "^8.2.2",
    "eslint": "^7.23.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.1.0",
    "typescript": "^4.2.3",
    "webpack": "^5.30.0",
    "webpack-cli": "^4.6.0"
  }
}
