{
  "name": "simple_server_gateway",
  "description": "Expose microservices under a joint port",
  "license": "GPL-3.0",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/axelkr/simple-server-gateway.git"
  },
  "scripts": {
    "build": "webpack --env.production",
    "buildContainer": "docker build --rm -f \"docker/Dockerfile\" -t gateway:latest docker",
    "runContainer": "docker run --rm -it --network host gateway:latest",
    "buildDebug": "webpack",
    "watch": "webpack --watch",
    "start": "node ./dist/bundle.js",
    "test": "jest",
    "lint": "eslint './src/**/*.ts'"
  },
  "dependencies": {
    "express": "^4.17.1",
    "postman-request": "^2.88.1-postman.8-beta.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.2",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "babel-loader": "^8.1.0",
    "eslint": "^6.8.0",
    "jest": "^25.4.0",
    "ts-jest": "^25.4.0",
    "ts-loader": "^6.2.2",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  }
}
