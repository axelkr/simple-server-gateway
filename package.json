{
  "name": "simple_server_gateway",
  "description": "Expose microservices under a joint port",
  "license": "GPL-3.0",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/axelkr/simple-server-gateway.git"
  },
  "scripts": {
    "build": "webpack --env.production",
    "buildContainer": "docker build --rm -f \"docker/Dockerfile\" -t gateway:latest docker",
    "runContainer": "docker run --rm -it --network host gateway:latest",
    "buildDebug": "webpack",
    "watch": "webpack --watch",
    "start": "node ./dist/bundle.js",
    "test": "jest",
    "lint": "tslint -c ./tslint.json './src/**/*.ts[x]*'"
  },
  "dependencies": {
    "express": "^4.17.1",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@types/express": "^4.17.1",
    "@types/request": "^2.48.3",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.8",
    "babel-loader": "^8.0.6",
    "jest": "^24.9.0",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.1.2",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9"
  }
}
